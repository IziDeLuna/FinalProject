<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>New Employee</title>
</head>
<body>
<h3>Add Employee</h3>
<%= form_for :add_emp, url: employees_path do |f| %>
    <p>
      <%=f.label :username %><br>
      <%= f.text_area :username %>
    </p>
    <p>
      <%=f.label :password %><br>
      <%= f.text_area :password %>
    </p>
    <p>
      <%=f.label :firstname %><br>
      <%= f.text_area :firstname %>
    </p>
    <p>
      <%=f.label :lastname %><br>
      <%= f.text_area :lastname %>
    </p>
    <p>
      <%=f.label :supervisor %><br>
      <%= f.text_area :supervisor %>
    </p>
    <p>
      <%= f.submit "Add Employee" %>
    </p>
<% end %>
</body>
</html>